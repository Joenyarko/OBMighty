            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"1234567890\",\n  \"total_balance\": 5000,\n  \"payment_method\": \"cash\"\n}"
            },
            "url": {
              "raw": "https://api.neziz.cloud/api/customers",
              "protocol": "https",
              "host": ["api", "neziz", "cloud"],
              "path": ["api", "customers"]
            },
            "description": "POST to create new customer"
          }
        }
      ]
    },
