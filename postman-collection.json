{
  "info": {
    "name": "O.B.Mighty API",
    "description": "Complete API collection for O.B.Mighty Multi-Tenant Contribution System",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@company.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "https://api.neziz.cloud/api/login",
              "protocol": "https",
              "host": ["api", "neziz", "cloud"],
              "path": ["api", "login"]
            },
            "description": "POST request to login. Returns authentication token."
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "https://api.neziz.cloud/api/me",
              "protocol": "https",
              "host": ["api", "neziz", "cloud"],
              "path": ["api", "me"]
            },
            "description": "GET current authenticated user"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "https://api.neziz.cloud/api/logout",
              "protocol": "https",
              "host": ["api", "neziz", "cloud"],
              "path": ["api", "logout"]
            },
            "description": "POST to logout current user"
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Get All Payments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "https://api.neziz.cloud/api/payments?page=1&per_page=15",
              "protocol": "https",
              "host": ["api", "neziz", "cloud"],
              "path": ["api", "payments"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "15"
                }
              ]
            },
            "description": "GET paginated list of payments"
          }
        },
        {
          "name": "Create Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_id\": 1,\n  \"payment_amount\": 500,\n  \"payment_method\": \"cash\",\n  \"payment_date\": \"2026-02-14\",\n  \"notes\": \"Payment for service\"\n}"
            },
            "url": {
              "raw": "https://api.neziz.cloud/api/payments",
              "protocol": "https",
              "host": ["api", "neziz", "cloud"],
              "path": ["api", "payments"]
            },
            "description": "POST to create new payment"
          }
        },
        {
          "name": "Get Payment by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "https://api.neziz.cloud/api/payments/1",
              "protocol": "https",
              "host": ["api", "neziz", "cloud"],
              "path": ["api", "payments", "1"]
            },
            "description": "GET specific payment details"
          }
        }
      ]
    },
    {
      "name": "Customers",
      "item": [
        {
          "name": "Get All Customers",
          "request": {
            "method": "GET",
